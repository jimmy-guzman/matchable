{
  "name": "matchable",
  "version": "1.0.0",
  "description": "A utility to define and match on tagged unions (like enums with payloads) â€” safely.",
  "keywords": [
    "tagged-union",
    "pattern-matching",
    "discriminated-union",
    "typescript",
    "match",
    "matchable",
    "case",
    "safe-matching"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jimmy-guzman/matchable.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "coverage": "vitest run --coverage",
    "dev": "tsup --watch",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "knip": "knip",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --color .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "devDependencies": {
    "@commitlint/config-conventional": "19.8.0",
    "@jimmy.codes/eslint-config": "5.7.0",
    "@jimmy.codes/prettier-config": "1.5.0",
    "@types/node": "22.13.14",
    "@vitest/coverage-v8": "3.0.9",
    "clean-pkg-json": "1.2.1",
    "commitlint": "19.8.0",
    "eslint": "9.23.0",
    "gitzy": "5.8.1",
    "is-ci": "4.1.0",
    "jiti": "2.4.2",
    "knip": "5.46.2",
    "lefthook": "1.11.5",
    "prettier": "3.5.3",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  },
  "peerDependencies": {
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
